%h1 Список пользователей
= link_to new_user_path, class: 'btn btn-default btn-xs' do
  %span.glyphicon.glyphicon-plus-sign
    %br
%table.table.table-bordered.table-hover.table-condensed
  %thead
    %tr.success
      %th Имя
      %th Email
      %th Действия
  %tbody
    - @users.each do |user|
      %tr
        %td= user.name
        %td= user.email
        %td
          %a{href: user_path(user), class: ['btn', 'btn-primary','btn-xs']}
            %span.glyphicon.glyphicon-eye-open
          %a{href: edit_user_path(user), class: ['btn', 'btn-success','btn-xs']}
            %span.glyphicon.glyphicon-pencil
          = link_to user_path(user), class: 'btn btn-danger btn-xs', method: :delete, data: { confirm: 'Уверены?' } do
            %span.glyphicon.glyphicon-trash